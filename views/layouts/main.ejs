<body>

    <div class="container-xxl px-md-5 bp-white shadow-lg">

        <header
            class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <img src="/img/LogoPoster/logo2.png" width="229" height="70" alt="poster">
            </a>

            <div class="col-md-6 d-flex justify-content-end align-items-center">
                <form method="POST" action="/search" class="me-3">
                    <input type="search" name="searchTerm" class="form-control" placeholder="Search..."
                        aria-label="Search">
                </form>


                <div class="btn-group">
                    <button type="button" class="btn btn-danger">Profile</button>
                    <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/signUp">SignUp</a></li>
                        <% if(isLoggedIn) { %>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                            <% } else { %>
                                <li><a class="dropdown-item" href="/login">Login</a></li>
                                <% } %>
                                    <li><a class="dropdown-item" href="/profile">Profile</a></li>
                    </ul>
                </div>
            </div>
        </header>



        <!--This is EJS part Don't touch it-->
        <main>
            <%- body -%>
        </main>

       
            <footer class="py-5 bg-light">
                <hr>
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <h4>Contact Details</h4>
                            <p>Email: makkalakumar55@gmail.com</p>
                            <p>Phone: +91 7995443410</p>
                            <p>Address: KMIT College, Hyderabad, Telangana, India</p>
                        </div>
                        <div class="col-md-4">
                            <h4>Social Media</h4>
                            <ul class="list-unstyled">
                                <li><a href="https://twitter.com/HemanthDragon" target="_blank"><i class="fab fa-twitter"></i> Twitter</a></li>
                                <li><a href="https://www.instagram.com/hemanth_bunty55/" target="_blank"><i class="fab fa-instagram"></i> Instagram</a></li>
                                <li><a href="https://www.linkedin.com/in/makkala-kumar-438698264//" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a></li>
                                <!-- Add more social media links as needed -->
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h4>Subscribe</h4>
                            <p>Subscribe to our website to receive updates and movie recomendations.</p>
                            <form>
                                <div class="input-group mb-3">
                                    <input type="email" class="form-control" placeholder="Your Email" aria-label="Your Email" aria-describedby="subscribe-btn">
                                    <button class="btn btn-primary" type="button" id="subscribe-btn">Subscribe</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
